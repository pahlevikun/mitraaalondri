<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBack"
    android:fitsSystemWindows="true"
    tools:context="com.waperr.aalaundry.main.handle_login.ForgotResetActivity">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_50sdp">

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/_10sdp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:hintEnabled="false">
            <EditText
                android:id="@+id/editTextPasswordForgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:padding="@dimen/_20sdp"
                android:textSize="@dimen/_13sdp"
                android:background="@drawable/bg_edittext2"
                android:textColorHint="@color/colorText2"
                android:textColor="@color/colorText"
                android:textColorHighlight="@color/colorText2"
                android:drawableLeft="@drawable/ic_login_password"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Masukan Kata Kunci" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:hintEnabled="false">
            <EditText
                android:id="@+id/editTextPasswordConfirmForgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:padding="@dimen/_20sdp"
                android:textSize="@dimen/_13sdp"
                android:background="@drawable/bg_edittext2"
                android:textColorHint="@color/colorText2"
                android:textColor="@color/colorText"
                android:textColorHighlight="@color/colorText2"
                android:drawableLeft="@drawable/ic_login_password"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Masukan Kembali Kata Kunci" />
        </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:text="Atur Ulang Kata Kunci"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:background="@color/colorPrimary"/>


    </LinearLayout>
</ScrollView>